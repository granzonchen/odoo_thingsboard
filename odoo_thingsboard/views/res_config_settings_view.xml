<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ext" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tb</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="ThingsBoard" string="ThingsBoard配置" data-key="tb">
                    <h2>ThingsBoard</h2>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <group>
                                <field name="tb_url" />
                                <field name="tb_username" />
                                <field name="tb_password" password="True"/>
                            </group>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
